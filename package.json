{
  "name": "blockchain-explorer-telegram-bot",
  "version": "0.1.0",
  "description": "Blockchain explorer Telegram bot",
  "main": "lib/bot.js",
  "scripts": {
    "removeTypes": "flow-remove-types -p src/ -d lib/",
    "postinstall": "npm run removeTypes",
    "buildDev": "npm run removeTypes && npm run eslint",
    "start": "node lib/bot.js",
    "test": "mocha --exit",
    "flow": "flow",
    "eslint": "eslint . --fix --ignore-pattern node_modules/",
    "incVersion": "semver -i $(cat version.num) > version.num",
    "buildContainer": "/usr/local/bin/docker build -t dokku/blockchain-explorer-telegram-bot:$(cat version.num) .",
    "deployContainer": "/usr/local/bin/docker save dokku/blockchain-explorer-telegram-bot:$(cat version.num) | bzip2 | ssh root@shopgrip.ru \"bunzip2 | docker load | dokku tags:create blockchain-explorer-telegram-bot previous; dokku tags:deploy blockchain-explorer-telegram-bot $(cat version.num)\"",
    "deployBlockchainExplorerTelegramBot": "npm ci && npm run buildDev && npm run incVersion && npm run buildContainer && npm run deployContainer"
  },
  "keywords": [],
  "author": "nnqq",
  "license": "MIT",
  "dependencies": {
    "blockchain.info": "^2.12.1",
    "etherscan-api": "^10.0.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "pino": "^5.8.1",
    "reconnecting-websocket": "^4.1.10",
    "sequelize": "^5.15.1",
    "telegraf": "^3.25.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "flow-bin": "^0.89.0",
    "flow-remove-types": "^1.2.3",
    "mocha": "^5.2.0",
    "semver": "^6.3.0"
  }
}
